#!/usr/bin/env bash
set -e
pair=batusd
sources=(
  binance
  bittrex
  coinbase
  gemini
  kraken
  uniswap
  upbit
)

case $1 in
  binance|bittrex|kraken) {
    bat_btc=$(setzer x-price "$1" batbtc)
    btc_usd=$(setzer price btcusd)
    setzer --format "$(bc -l <<<"$bat_btc * $btc_usd")"
  };;
  coinbase) {
    setzer x-price "$1" bat:usdc
  };;
  gemini) {
    setzer x-price "$1" batusd
  };;
  uniswap) {
    bat_eth=$(setzer x-price "$1" bateth)
    eth_usd=$(setzer price ethusd)
    setzer --format "$(bc -l <<<"$bat_eth * $eth_usd")"
  };;
  upbit) {
    bat_krw=$(setzer x-price "$1" batkrw)
    krw_usd=$(setzer x-price fx krwusd)
    setzer --format "$(bc -l <<<"$bat_krw * $krw_usd")"
  };;
  *) {
    export SETZER_MIN_MEDIAN=2
    setzer --price-commands "-$1-" $pair "${sources[@]}"
  };;
esac
