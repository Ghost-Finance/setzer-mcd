#!/usr/bin/env bash
set -e
pair=btcusd
sources=(
  bitstamp
  bittrex
  coinbase
  ftx
  gemini
  kraken
)

case $1 in
  bitstamp|bittrex|coinbase|gemini|ftx) {
    setzer x-price "$1" $pair
  };;
  kraken) {
    setzer x-price kraken xxbt:zusd
  };;
  *) {
    setzer --price-commands "-$1-" $pair "${sources[@]}"
  };;
esac
